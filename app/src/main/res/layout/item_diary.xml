<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/mood"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"

                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="AUG"

                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="5"
                    android:textColor="@color/black"

                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/year"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="2023"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/ll"
                android:text="08:45 AM"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@id/mood"
                android:layout_marginStart="8dp"

                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/ll">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Title"

                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:ellipsize="end"
                    android:maxLines="3"

                    android:text="smsmdsmdsdsdsd\ndsdsdsdsdsdsd" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/il"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/des"
                    android:orientation="horizontal"
                    android:weightSum="4"

                    >

                    <RelativeLayout
                        android:visibility="invisible"

                        android:id="@+id/rl1"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv1"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_launcher_background"
                            android:tintMode="src_atop"
                            app:shapeAppearanceOverlay="@style/roundedImageView" />

                        <ImageView
                            android:visibility="gone"

                            android:id="@+id/playbtn1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/play_bg"
                            android:src="@drawable/ic_baseline_play_arrow_24" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl2"
                        android:visibility="invisible"

                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv2"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_launcher_background"
                            android:tintMode="src_atop"
                            app:shapeAppearanceOverlay="@style/roundedImageView"
                             />

                        <ImageView
                            android:visibility="gone"

                            android:id="@+id/playbtn2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/play_bg"
                            android:src="@drawable/ic_baseline_play_arrow_24" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl3"
                        android:visibility="invisible"

                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv3"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_launcher_background"
                            android:tintMode="src_atop"
                            app:shapeAppearanceOverlay="@style/roundedImageView" />

                        <ImageView
                            android:visibility="gone"

                            android:id="@+id/playbtn3"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/play_bg"
                            android:src="@drawable/ic_baseline_play_arrow_24" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="invisible"

                        android:id="@+id/rl4"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv4"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_launcher_background"
                            android:tintMode="src_atop"
                            app:shapeAppearanceOverlay="@style/roundedImageView"
                            />

                        <ImageView
                            android:visibility="gone"

                            android:id="@+id/playbtn4"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/play_bg"
                            android:src="@drawable/ic_baseline_play_arrow_24" />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/noitems"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center"
                            android:text="+1"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout><!--
